<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Use the title from a page's frontmatter if it has one -->
    <title><%= current_page.data.title || "P-Jackman" %></title>
    <%= stylesheet_link_tag "site" %>
    <%= javascript_include_tag "site" %>
    <link href="https://fonts.googleapis.com/css?family=Anonymous+Pro" rel="stylesheet">
  </head>
  <body>
    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/" style="padding-top: 5px; padding-bottom: 5px; line-height: 40px;">
            <img alt="PJ" src="<%= image_path("pj_logo.svg")%>" style="height: 40px; display: inline-block; margin-top: -5px;">
            <span style="display: inline-block;">PATRICK JACKMAN</span>
          </a>
        </div>

        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav navbar-right">
            <li class="<%= active_navigation("/about") %>"><a href="/about.html">ABOUT</a></li>
            <li class="<%= active_navigation("/portfolio") %>"><a href="/portfolio.html">PORTFOLIO</a></li>
            <li class="<%= active_navigation("/connect") %>"><a href="/connect.html">CONNECT</a></li>
          </ul>
        </div><!-- /.navbar-collapse -->
      </div>
    </nav>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
